# Some random scripts converted into just

# Display Public IP Address
public_ip:
    @curl -s https://ifconfig.me/ip -4
    @echo ""
    @curl -s https://ip.wtf

# Flush DNS Cache (Linux)
flush_dns:
    resolvectl flush-caches
    sudo systemd-resolve --flush-caches
    echo "Flushed DNS cache."

# Generate a new ed25519 SSH Key
make_key:
    ssh-keygen -t ed25519 -C "Generated KEY $(date +%Y-%m-%d)"

# Clean up cache files {WIP}
