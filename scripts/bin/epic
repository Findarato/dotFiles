#keycode  69 = F3 F13 F3 F3 F3 F3 XF86Switch_VT_3
#keycode  70 = F4 F14 F4 F4 F4 F4 XF86Switch_VT_4
#keycode  71 = F5 F15 F5 F5 F5 F5 XF86Switch_VT_5
#keycode  72 = F6 F16 F6 F6 F6 F6 XF86Switch_VT_6
