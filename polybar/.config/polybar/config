###########################################################
####### ESO Server Status   ###############################
###########################################################

[module/esoStatus]
type               = custom/script

exec               = python3 /home/joe/.config/i3/scripts/eso/eso.py
interval           = 100
format-underline   = ${colors.white}
format-prefix      = "üíª "
format-prefix-font = 6
format-padding     = 3
format             = <label>
label              = ESO: %output%


###########################################################
####### Wireguard Module    ###############################
###########################################################

[module/vpn-wireguard-wg]
type = custom/script
exec = ~/.config/i3/scripts/vpn-wireguard-wg.sh
interval = 5
content-font = 5
content-padding = 2
format-prefix = "VPN: "
click-left = ~/.config/i3/scripts/vpn-wireguard-wg.sh --toggle &



[module/date]
type = internal/date

time = %H:%M
date = "%A, %B %d"
date-alt = %A, %B %d, %Y
time-alt = %H:%M:%S

format-prefix = "üìÖ "
format-prefix-font = 6
format-padding = 3
format-underline = ${colors.orange}
format-foreground = ${colors.orange}
interval = 20

label = %date%, %time%
label-font = 1

label-foreground = ${colors.yellow}

[module/appfilemanager]
type = custom/text
;content = "ÔÜ∂" steam
content = "üìÅ"
content-font = 5
content-padding = 2
click-left = "nautilus > /dev/null 2>&1 &"

[module/picomToggle]
type = custom/script
content-font = 5
content-padding = 2
click-left = "~/.config/i3/scripts/picomStatus.sh --toggle> /dev/null 2>&1 &"
format = <label>
format-prefix=" Picom "
#label = %output%
exec = ~/.config/i3/scripts/picomStatus.sh
interval = 5


[module/xkillapp]
type = custom/text
content-font = 5
content-padding = 2
content = "üíÄ"
format-font = 6
click-left = sleep 0.5 && xkill > /dev/null 2>&1 &


[module/kernel]
type = custom/script
exec = uname -r
tail = false
interval = 1024

format-foreground = ${colors.white}
format-background = ${colors.base00}
format-prefix = " Ôãõ "
format-prefix-foreground = #0084FF
format-underline = #4B5665

;Sound
[module/sound]
