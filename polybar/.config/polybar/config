[module/weather]
type = custom/script
format = <label>
format-underline = ${colors.base0E}
format-prefix-foreground = ${colors.base0E}
format-prefix = " ÔÉÇ "
exec = curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval = 3600