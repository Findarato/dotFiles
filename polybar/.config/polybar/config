[module/esoStatus]
type = custom/script
exec = python3 /home/joe/.config/i3blocks/custom/eso/eso.py
interval = 100
;format-underline = ${colors.white}

label = ESO Status: %output%

;Date correction
[module/date]
type = internal/date

time = %H:%M
date = %A, %B %d
date-alt = %A, %B %d, %Y
time-alt = %H:%M:%S

format-prefix = " "
format-padding = 2
format-underline = ${colors.menucol-orange}
format-foreground = ${colors.menucol-orange}
interval = 20

label = %date%, %time%
label-font = 1
label-foreground = ${colors.light}


[module/appfilemanager]
type = custom/text
content = F
content-font = 7
content-padding = 2
click-left = "nautilus > /dev/null 2>&1 &"

[module/xkillapp]
type = custom/text
content = Kill
content-font = 0
content-padding = 2
click-left = sleep 0.5 && xkill > /dev/null 2>&1 &


;Sound
[module/sound]
