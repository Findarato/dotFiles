[module/esoStatus]
type = custom/script

exec = python3 /home/joe/.config/i3blocks/custom/eso/eso.py
interval = 100
format-underline = ${colors.white}
format-prefix = "üíª "
format-prefix-font = 6
format-padding = 3
format = <label>
label = ESO Status: %output%


[module/date]
type = internal/date

time = %H:%M
date = "%A, %B %d"
date-alt = %A, %B %d, %Y
time-alt = %H:%M:%S

format-prefix = "üìÖ "
format-prefix-font = 6
format-padding = 3
format-underline = ${colors.orange}
format-foreground = ${colors.orange}
interval = 20

label = %date%, %time%
label-font = 1

label-foreground = ${colors.yellow}

[module/appfilemanager]
type = custom/text
content = "ÔÜ∂"
content-font = 5
content-padding = 2
click-left = "nautilus > /dev/null 2>&1 &"

[module/xkillapp]
type = custom/text
content-font = ${fonts.FA5_brands}
content-padding = 2
content = "üíÄ"
click-left = sleep 0.5 && xkill > /dev/null 2>&1 &


